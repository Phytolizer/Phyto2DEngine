#type vertex
#version 330 core

layout(location = 0) in vec3 attrPosition;
layout(location = 0) in vec4 attrColor;

out vec4 fragColor;

void main()
{
    fragColor = attrColor;
    gl_Position = vec4(attrPosition, 1.0);
}

#type fragment
#version 330 core

in vec4 fragColor;

uniform vec4 uColor;

out vec4 color;

void main()
{
    color = uColor;
}